    <script>
        // Auto-refresh every 30 seconds
        setInterval(() => {
            fetch(window.location.href)
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const newDoc = parser.parseFromString(html, 'text/html');
                    
                    // Update activity lists
                    const newRecentCount = newDoc.getElementById('recentCount');
                    const newSuspiciousCount = newDoc.getElementById('suspiciousCount');
                    
                    if (newRecentCount && newSuspiciousCount) {
                        document.getElementById('recentCount').textContent = newRecentCount.textContent;
                        document.getElementById('suspiciousCount').textContent = newSuspiciousCount.textContent;
                    }
                })
                .catch(error => console.error('Auto-refresh error:', error));
        }, 30000); // 30 seconds

        // Export activities function
        function exportActivities() {
            const timestamp = new Date().toISOString().split('T')[0];
            const filename = `activities_${timestamp}.csv`;
            
            // In a real implementation, you would fetch the data from the server
            alert('Export functionality would generate a CSV file: ' + filename);
            console.log('Export would save as:', filename);
        }

        // Debug function
        window.debugActivityMonitor = function() {
            console.log('üîç Activity Monitor Debug Info:');
            console.log('Active Users:', document.getElementById('recentCount').textContent);
            console.log('Suspicious Count:', document.getElementById('suspiciousCount').textContent);
        };
    </script>
