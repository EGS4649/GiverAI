  <script>
    async function submitAppeal(appealId, action) {
      const adminNotes = document.getElementById(`admin_notes_${appealId}`).value;
      const messageContainer = document.getElementById('message-container');
      
      try {
        const formData = new FormData();
        formData.append('appeal_id', appealId);
        formData.append('action', action);
        formData.append('admin_notes', adminNotes);
        
        const response = await fetch('/admin/process-appeal', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
          messageContainer.innerHTML = `
            <div class="success-message">
              ${result.message}
            </div>
          `;
          // Reload page after 1 second to show updated appeals
          setTimeout(() => location.reload(), 1000);
        } else {
          messageContainer.innerHTML = `
            <div class="error-message">
              ${result.message}
            </div>
          `;
        }
      } catch (error) {
        messageContainer.innerHTML = `
          <div class="error-message">
            An error occurred while processing the appeal.
          </div>
        `;
      }
      
      // Scroll to message
      messageContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  </script>
